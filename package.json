{
  "name": "framv",
  "version": "0.1.0",
  "description": "Freeze HTML elements, animations, and CSS variables into video frames using WebCodec and MediaBunny",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*",
    "website",
    "slides",
    "video",
    "docs",
    "infra"
  ],
  "scripts": {
    "prepare": "husky install",
    "install:examples": "npm install --prefix examples/basic",
    "build:core": "cd packages/core && npm run build",
    "build": "npm run build:core",
    "clean": "rm -rf packages/*/dist",
    "format": "prettier --write \"packages/**/*.{ts,tsx,js,json,md}\" \"website/**/*.{ts,tsx,js,json,md,html,css}\" \"slides/**/*.{ts,tsx,js,json,md,html,css}\" \"examples/**/*.{ts,tsx,js,json,md}\" \"infra/**/*.{ts,tsx,js,json,md}\" \"*.{md,json}\"",
    "format:check": "prettier --check \"packages/**/*.{ts,tsx,js,json,md}\" \"slides/**/*.{ts,tsx,js,json,md,html,css}\" \"examples/**/*.{ts,tsx,js,json,md}\" \"infra/**/*.{ts,tsx,js,json,md}\" \"*.{md,json}\"",
    "lint": "npm run lint --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "test:watch": "npm run test:watch --workspaces --if-present",
    "test:coverage": "npm run test:coverage --workspaces --if-present",
    "docs": "typedoc",
    "docs:api": "typedoc",
    "typedoc": "typedoc",
    "slides:dev": "npm run dev --workspace=slides",
    "docs:dev": "npm run start --workspace=docs",
    "docs:build": "npm run build --workspace=docs",
    "build:all": "tsc -b && npm run build --workspace=website && npm run build --workspace=docs",
    "format:all": "npm run format --workspaces --if-present",
    "lint:all": "npm run lint --workspaces --if-present",
    "test:all": "npm run test --workspaces --if-present",
    "update": "ncu -u",
    "update:workspaces": "ncu -u --workspaces",
    "update:all": "npm run update && npm run update:workspaces",
    "install:all": "npm install -f && npm install -f --workspaces && npm run install:examples"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{js,json,md}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "video",
    "export",
    "webcodec",
    "mediabunny",
    "animation",
    "html",
    "canvas"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mensreversa/framv.git"
  },
  "bugs": {
    "url": "https://github.com/mensreversa/framv/issues"
  },
  "homepage": "https://github.com/mensreversa/framv#readme",
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "eslint": "^10.0.0",
    "globals": "^17.3.0",
    "typescript-eslint": "^8.56.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "npm-check-updates": "^19.3.2",
    "prettier": "^3.8.1",
    "prettier-plugin-organize-imports": "^4.3.0",
    "typedoc": "^0.28.17",
    "typescript": "^5.9.3"
  }
}
